{
  "name": "hotkey-overlay",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm:serve\" \"npm:electron\"",
    "serve": "cd overlay-ui && npm run dev",
    "electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:ui": "cd overlay-ui && npm run build",
    "start": "electron .",
    "prod": "npm run build:ui && cross-env NODE_ENV=production electron ."
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "electron": "^31.0.0",
    "electron-is-dev": "^3.0.1"
  }
}
